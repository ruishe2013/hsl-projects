<img id="checkCodeImg" align="absmiddle" border="0" src="$!validatorUrl" class="$!imgClass" />
<a href="javascript:changeCheckCode();">看不清，换一张</a>
<script>
	function changeCheckCode() {
		var baseUrl = "$!validatorUrl";
		var url = baseUrl + "&t=" + Math.round((Math.random() * 10000));
		document.getElementById('checkCodeImg').src = url;
	}
</script>