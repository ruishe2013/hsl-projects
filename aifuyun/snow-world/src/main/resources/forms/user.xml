<?xml version="1.0" encoding="GB18030"?>
<forms>
	
	<form name="user.registerUser">
		<field name="id">
			<validator type="long" message="id必须是正整数!" >
				<param name="min" value="0" />
			</validator>
		</field>
		<field name="username">
			<validator type="required" message="用户名不能为空!" />
			<validator type="string" message="用户名长度不能超过20个字符!" >
				<param name="min" value="1" />
				<param name="max" value="20" />
			</validator>
		</field>
		<field name="password">
			<validator type="required" message="密码不能为空!" />
			<validator type="string" message="密码的长度必须在4~20个字符之间!" >
				<param name="min" value="4" />
				<param name="max" value="20" />
			</validator>
		</field>
		<field name="confirmPassword">
			<validator type="required" message="确认密码不能为空!" />
			<validator type="string" message="确认密码的长度必须在4~20个字符之间!" >
				<param name="min" value="4" />
				<param name="max" value="20" />
			</validator>
		</field>
		<field name="checkCode">
			<validator type="required" message="验证码不能为空!" />
			<validator type="com.aifuyun.snow.world.web.common.validators.CheckCodeValidator" 
						message="验证码错误!" >
			</validator>
		</field>
	</form>
	
</forms>