#set($form = $formFactory.createForm("together.createTaxiOrder"))

#macro(errorMessage, $str)
	#if( "$!str" != "")
		<div class="common-error-message">${str}</div>
	#end
#end

<div>
	<form method="post">
		<input type="hidden" name="createTaxiOrder" value="$tokenUtil.token('createTaxiOrder')" />
		<input type="hidden" name="actionTarget" value="together/orderAction" />
		<input type="hidden" name="actionEvent" value="createTaxiOrder" />
		
		<input type="hidden" id="$!form.fields.cityId.name" name="$!form.fields.cityId.name" value="$!form.fields.cityId.value" />
		#errorMessage($!form.fields.cityId.message)
		#errorMessage($!form.fields.cityId.message)
		
		<input type="hidden" id="$!form.fields.arriveCityId.name" name="$!form.fields.arriveCityId.name" value="$!form.fields.arriveCityId.value" />
		#errorMessage($!form.fields.arriveCityId.message)
		#errorMessage($!form.fields.arriveCityId.message)
		
		<div class="input-item">
			出发地：
			出发城市<input type="text" readonly="true" id="$!form.fields.fromCity.name" name="$!form.fields.fromCity.name" value="$!form.fields.fromCity.value"/>
			<a href="$snowModule.setTarget('city/cityList').add('isSwitch','true').add('onId', 'cityId').add('onName', 'fromCity')" target="_blank">更换城市...</a>
			出发地<input type="text" id="$!form.fields.fromAddr.name" name="$!form.fields.fromAddr.name" value="$!form.fields.fromAddr.value"/>
		</div>
		#errorMessage($!form.fields.fromCity.message)
		#errorMessage($!form.fields.fromAddr.message)
		
		<div class="input-item">
			目的地：
			目的城市<input type="text" readonly="true" id="$!form.fields.arriveCity.name" name="$!form.fields.arriveCity.name" value="$!form.fields.arriveCity.value"/>
			<a href="$snowModule.setTarget('city/cityList').add('isSwitch','true').add('onId', 'arriveCityId').add('onName', 'arriveCity')" target="_blank">更换城市...</a>
			目的地<input type="text" id="$!form.fields.arriveAddr.name" name="$!form.fields.arriveAddr.name" value="$!form.fields.arriveAddr.value"/>
		</div>
		#errorMessage($!form.fields.arriveCity.message)
		#errorMessage($!form.fields.arriveAddr.message)
	
	
		<div class="input-item">
			途径 <input type="text" id="$!form.fields.approach.name" name="$!form.fields.approach.name" value="$!form.fields.approach.value" />
		</div>
		#errorMessage($!form.fields.approach.message)
		
	
		<div class="input-item">
		出发时间：
		日期<input type="text" id="$!form.fields.fromTimeDate.name" name="$!form.fields.fromTimeDate.name" value="$!form.fields.fromTimeDate.value"/>
		时间<input type="text" id="$!form.fields.fromTimeTime.name" name="$!form.fields.fromTimeTime.name" value="$!form.fields.fromTimeTime.value"/>
		</div>
		#errorMessage($!form.fields.fromTimeDate.message)
		#errorMessage($!form.fields.fromTimeTime.message)
		
		
		<div class="input-item">
		预计到达时间：
		日期<input type="text" id="$!form.fields.arriveTimeDate.name" name="$!form.fields.arriveTimeDate.name" value="$!form.fields.arriveTimeDate.value"/>
		时间<input type="text" id="$!form.fields.arriveTimeTime.name" name="$!form.fields.arriveTimeTime.name" value="$!form.fields.arriveTimeTime.value"/>
		</div>
		#errorMessage($!form.fields.arriveTimeDate.message)
		#errorMessage($!form.fields.arriveTimeTime.message)
		
		
		<div class="input-item">
			空闲座位 <input type="text" id="$!form.fields.totalSeats.name" name="$!form.fields.totalSeats.name" value="$!form.fields.totalSeats.value" />
		</div>
		#errorMessage($!form.fields.totalSeats.message)
		
		<div class="input-item">
			描述<textarea cols="40" rows="4" id="$!form.fields.description.name" name="$!form.fields.description.name">$!form.fields.description.value</textarea>
		</div>
		#errorMessage($!form.fields.description.message)
		
		<div class="input-item"> 
			<label for="$!form.fields.checkCode.name">*验证码：</label> 
			<input type="text" size="6" maxlength="4" id="$!form.fields.checkCode.name" name="$form.fields.checkCode.name" value="" />
			$control.setTemplate('common/checkCode.vm')
		</div>
		#errorMessage($!form.fields.checkCode.message)
		
		#errorMessage($!csrfmessage)
		#errorMessage($!resultmessage.message)
		
		<div class="input-item">
			<input type="submit" value="提交" />
		</div>
	
	</form>
</div>