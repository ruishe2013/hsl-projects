<div id="cArea"><!--content-1 begin-->
    <div class="search_box"><!--search begin-->
    	<div class="search_t">
    	<button onclick="location.href='$snowModule.setTarget('together/createTaxiOrder')'" class="but_built" onMouseDown="this.className='but_built'" onmouseover="this.className='but_built_h'" onmouseup="this.className='but_built_h'" onMouseOut="this.className='but_built'"></button></div>
        <div class="search_form">

        	<form action="$snowModule.setTarget('search/searchOrder')" method="get" name="search">
                <ul>
                <li>
                <label for="inp_name">城市：</label>
				<p><select name="fromCity" class="select">
                  <option value="$!{selectedCity.name}">$!{selectedCity.name}</option>
                </select>
                
                <a href="$snowModule.setTarget('city/cityList')" >切换城市</a>
                </p>
                </li>

                <li>
                <label for="inp_name">地点：</label>
				<p><input id="inp_name" class="input_out" name="fromAddr" type="text" onfocus="this.className='input_on';this.onmouseout=''" onblur="this.className='input_off';this.onmouseout=function(){this.className='input_out'};" onmousemove="this.className='input_move'" onmouseout="this.className='input_out'" /> 
				到 <input id="inp_name" class="input_out" name="arriveAddr" type="text" onfocus="this.className='input_on';this.onmouseout=''" onblur="this.className='input_off';this.onmouseout=function(){this.className='input_out'};" onmousemove="this.className='input_move'" onmouseout="this.className='input_out'" /></p>
                </li>
                
                <li>
                <label for="inp_name">发车时间：</label>
				<p><input type="text" name="it" readonly="readonly" value="$!dateUtil.formatDate($defaultSearchDate, 'dd/MM/yyyy')" class="input_out date-pick" onfocus="this.className='input_on';this.onmouseout=''" onblur="this.className='input_off';this.onmouseout=function(){this.className='input_out'};" onmousemove="this.className='input_move'" onmouseout="this.className='input_out'" /> 
				#set($selectedHour = $dateUtil.getHour($defaultSearchDate))
				#set($hours = [1 .. 24])
				<select name="fcsj2">
					#foreach ($hour in $hours)
						<option value="$hour" #if ("$!selectedHour" == "$!hour") selected #end>$hour时</option>
					#end
                </select>
                #set($minuteIndice = [0 .. 4])
                <select name="fcsj3">
                	#foreach($minuteIndex in $minuteIndice)
                		#set($minute = $minuteIndex * 15)
						<option value="$minute" #if("$!defaultSearchMinutes" == "$!minute") selected #end>$minute分</option>
					#end
                </select>
                </p>
                </li>
                <li>
                <button type="submit" class="but_search" onMouseDown="this.className='but_search'" onmouseover="this.className='but_search_h'" onmouseup="this.className='but_search_h'"  onMouseOut="this.className='but_search'"></button>
                </li>
                </ul>
				
            </form>
        </div>
        <div class="search_b"></div>
    </div><!--search end-->
