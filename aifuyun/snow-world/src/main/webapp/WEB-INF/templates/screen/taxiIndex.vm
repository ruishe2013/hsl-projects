<div id="cArea"><!--content-2 begin-->
<div class="newcar_t">
    <div class="newcar_title">最新拼车</div>
	    <div class="but_release">
	    	<a href="$snowModule.setTarget('together/createTaxiOrder')" class="but_fbpc" title="发布拼的">发布拼的</a>
	    	<span class="newcar_txt">已经有23516人发起拼车 <a href="#">查看更多拼车信息</a></span>
	    </div>
    </div>
	<div class="newcar_c">
	<table width="100%" cellpadding="0" cellspacing="0">
	  <tr class="font_12_b bgc_dy">
	    <td>城市</td>
	    <td>出发地</td>
	    <td>目的地</td>
	    <td>发车时间</td>                         
	    <td>预计到达时间</td>
	    <td>发起人</td>
	    <td>加入拼车</td>
	  </tr>
	#set($index=0)
	#foreach($order in $recentOrders)
		<tr #if( $index % 2 !=0 )class="bgc_dg" #end>
		    <td>$!order.fromCity</td>
		    <td>$!order.fromAddr</td>
		    <td>$!order.arriveAddr</td>
		    <td>$!dateUtil.formatDate($order.fromTime, 'yyyy-MM-dd HH:mm')</td>
		    <td>$!dateUtil.formatDate($order.arriveTime, 'yyyy-MM-dd HH:mm')</td>
		    <td>$!order.creatorUsername</td>
		    <td><a href="$snowModule.setTarget('together/orderDetail').add('orderId', $order.id)" class="but_jrpc">查看详情</a></td>
		</tr>
		#set($index= $index + 1)
	#end
</table>

</div>
